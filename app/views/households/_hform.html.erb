<%= simple_form_for(@household, html: {class: 'form-vertical'}) do |f| %>
  <%= f.input :name, label: 'Family Name', placeholder: 'Family Name' %>
  <%= f.input :mobile_number, label: 'Mobile Number', placeholder: '+1########' %>
  <%= f.input :location %>
  <%= f.input :email %>
  <%= f.button :submit %>
<% end %>